{
  "name": "vite-userscript-plugin",
  "version": "1.0.0",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "examples:dev": "turbo run dev --filter='./examples/*'",
    "examples:build": "turbo run build --filter='./examples/*'",
    "format": "prettier --write --ignore-unknown **",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/vite-userscript-plugin.git"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "userscript",
    "tampermonkey",
    "greasemonkey",
    "violentmonkey"
  ],
  "author": {
    "name": "Vitalij Ryndin",
    "email": "sys@crashmax.ru",
    "url": "https://crashmax.ru"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crashmax-dev/vite-userscript-plugin/issues"
  },
  "dependencies": {
    "@types/tampermonkey": "^4.0.5",
    "get-port": "^6.1.2",
    "sanitize-filename": "^1.6.3",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "@crashmax/prettier-config": "^2.0.3",
    "@crashmax/tsconfig": "^1.0.2",
    "@types/node": "^18.7.13",
    "@types/websocket": "^1.0.5",
    "@vitest/ui": "^0.22.1",
    "tsup": "^6.2.2",
    "turbo": "^1.4.3",
    "typescript": "^4.7.4",
    "vite": "^3.0.9",
    "vite-plugin-dts": "^1.4.1",
    "vitest": "^0.22.1"
  },
  "peerDependencies": {
    "@types/tampermonkey": ">=4.0.0",
    "vite": ">=2.9.0"
  }
}
